<div class="row mb-1">
	<textarea class="form-control" rows=4 @onchange=@(v => Generator.SetStringFromText(v.Value.ToString()))></textarea>
	<div class="d-inline-flex">
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="checkbox" id=@("split_nl_" + ID) @bind=Generator.SplitOnNewline />
			<label class="form-check-label" for=@("split_nl_" + ID)>Split On New Lines</label>
		</div>
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="checkbox" id=@("split_cm_" + ID) @bind=Generator.SplitOnComma />
			<label class="form-check-label" for=@("split_cm_" + ID)>Split On Commas</label>
		</div>
		<div class="form-check form-check-inline">
			<input class="form-check-input" type="checkbox" id=@("split_sp_" + ID) @bind=Generator.SplitOnSpace />
			<label class="form-check-label" for=@("split_sp_" + ID)>Split On Spaces</label>
		</div>
	</div>
</div>

@code
{
	[Parameter]
	public DataManager DataManager { get; set; } = null!;
	[Parameter]
	public NameGenToolkit.StringList Generator { get; set; } = null!;

	string ID => Generator.GUID.ToString();
}