@{
	ModalManager.ModalsNeedUpdating += (a, b) => StateHasChanged();
}

<div class="modal fade" id="@ID" tabindex="-1" role="dialog">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class=modal-title>@ModalManager.Header</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				@ModalManager.Body
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
				<button type="button" class="btn @MainButtonStyle" data-bs-dismiss="modal" @onclick=ModalManager.Callback>Confirm</button>
			</div>
		</div>
	</div>
</div>

@code {
	[Parameter]
	public string ID { get; set; } = "";

	[Parameter]
	public string MainButtonStyle { get; set; } = "";

}
